@{
	ViewData["Title"] = "Buscar Endereço";
}

<div class="mt-2">
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="@(Url.Action("Index","Home"))">Início</a></li>
			<li class="breadcrumb-item active" aria-current="page">Buscar Endereço</li>
		</ol>
	</nav>
	<div class="mt-4">
		<div class="mb-3 col-3">
			<label class="form-label">CEP <strong>*</strong></label>
			<input id="cep-input" maxlength="8" class="form-control" type="text" placeholder="Ex: 13700000">
		</div>
	</div>
	<div class="d-flex gap-4 mt-3">
		<button class="btn btn-secondary" onclick="window.location.pathname = '@(Url.Action("Index","Home"))'">Voltar</button>
		<button id="buscar-button" class="btn btn-primary">Buscar</button>
	</div>
</div>

@section Scripts {
	<script src="~/Scripts/Views/BuscarEndereco/Index.js"></script>
}